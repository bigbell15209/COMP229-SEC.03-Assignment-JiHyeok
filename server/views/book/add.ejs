<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Contents for the Add Page -->
<div class="condtainer">
    <div class="row">
        <div class="offset-md-3 col-md-8">
            <h1> <%= title  %> </h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <br>
                    <input type="text" class="form-contorl"
                    id="nameTextField"
                    placeholder="Enter the Book Title"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Author</label>
                    <br>
                    <input type="text" class="form-contorl"
                    id="authorTextField"
                    placeholder="Enter the Book's Author"
                    name="author" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Year</label>
                    <br>
                    <input type="text" class="form-contorl"
                    id="publishedTextField"
                    placeholder="Enter the year of Publication"
                    name="published" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <br>
                    <textarea type="text" class="form-contorl"
                    id="descriptionTextArea"
                    placeholder="Enter the brief Description"
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <br>
                    <input type="number" class="form-contorl"
                    id="priceTextField"
                    placeholder="Enter the price"
                    name="price" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>